<!-- mapper 태그 내부에 sql문을 넣으면 mybatis가 알아서 해준다.. -->
<mapper namespace="com.soninlawisdice.mapper.IslandMapper">
	<!-- namespace를 만든 인터페이스와 맞춰주기 -->
	<!-- id를 service의 함수명과 맞춰주기 -->
	<!-- resultType을 지정해주면 해당 클래스 타입으로 결과값이 저장된다. -->
	<select id="selectTradeIslandList"
		resultType="com.soninlawisdice.vo.TradeVO">
		SELECT TRADE.* FROM TRADE 
		WHERE T_ISLAND != 0 
		ORDER BY T_WRITTEN_DATE DESC
	</select> <!-- ;세미콜론 금지!!!!!!!!!! -->

	<select id="selectBoard_writeIslandList"
		resultType="com.soninlawisdice.vo.Board_writeVO">
		SELECT BOARD_WRITE.* FROM BOARD_WRITE 
		WHERE bw_island != 0 
		ORDER BY BW_WRITTEN_DATE DESC
	</select> <!-- ;세미콜론 금지!!!!!!!!!! -->


