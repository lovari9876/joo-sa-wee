WHERE T_ISLAND != 0 AND T.M_NO = M.M_NO
ORDER BY T_WRITTEN_DATE DESC;  

SELECT T.*, M.M_NICK FROM TRADE T left join MEMBER M 
on T.M_NO = M.M_NO
WHERE T_ISLAND != 0 
ORDER BY T_WRITTEN_DATE DESC; -->


</mapper>